<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page id="page" title="UTM Hostel Management System" enableScrolling="true">
        <subHeader>
            <Toolbar>
                <Title text="Portal Access" level="H3"/>
                <ToolbarSpacer/>
                <Label text="Select Role:" class="sapUiTinyMarginEnd"/>
                <Select
                    id="portalSelect"
                    selectedKey="student"
                    change="onPortalChange">
                    <items>
                        <core:Item key="student" text="Student Portal"/>
                        <core:Item key="admin" text="Administrator Portal"/>
                    </items>
                </Select>
            </Toolbar>
        </subHeader>
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiLargeMargin">
                <Title text="Welcome to Hostel Management System" level="H1" class="sapUiLargeMarginBottom"/>
                <Text text="Select your role from the top dropdown to continue" class="sapUiMediumMarginBottom"/>

                <Panel headerText="System Information" class="sapUiLargeMarginTop" width="600px">
                    <VBox class="sapUiSmallMargin">
                        <HBox class="sapUiTinyMarginBottom">
                            <Label text="Current Period: " design="Bold" width="150px"/>
                            <Text text="{hostelData>/systemSettings/currentPeriod/semester}"/>
                        </HBox>
                        <HBox class="sapUiTinyMarginBottom">
                            <Label text="Academic Year: " design="Bold" width="150px"/>
                            <Text text="{hostelData>/systemSettings/currentPeriod/academicYear}"/>
                        </HBox>
                        <HBox>
                            <Label text="System Status: " design="Bold" width="150px"/>
                            <ObjectStatus
                                text="{= ${hostelData>/systemSettings/currentPeriod/isOpen} ? 'Open' : 'Closed' }"
                                state="{= ${hostelData>/systemSettings/currentPeriod/isOpen} ? 'Success' : 'Error' }"/>
                        </HBox>
                    </VBox>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>